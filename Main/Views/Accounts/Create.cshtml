@model Calculator.Models.Account

@{
    ViewData["Title"] = "Create";
}

<style>
    #thing{
        position:relative;
        width: 500px;
        height: 320px;
        background-color: rgba(32,42,80,0.9);
        border:solid;
        border-color:black;
        left: 35%;
        margin-top: 20%;

    }

    body {
        background-image: url('https://images2.alphacoders.com/132/1327234.jpeg');
        background-size: 100% 100%;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }
    
</style>


<div id="thing">
    <br />
    <h1 style="text-align: center; color: gold; font-weight:bold">Create your Account</h1>

    <hr width="500px" style=""/>

    <div class="row" style="text-align: center">
        <div class="col-md-4" style="position: absolute; margin-left:125px; width: 250px">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Username" style="border-radius:2px" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" style="border-radius:2px" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" style="border-radius:2px; color: gold;border-color: gold;background-color:darkblue;" />
                </div>
            </form>
            <br />
            <a asp-action="Index" style="color: gold">Back to List</a>   
        </div>
    </div>

    

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    #errorDiv{
        position:absolute;
        left: 300px;
        top: 380px;
        color: red;
        font-weight: bold;
    }
</style>

@if(ViewData["error"] != null)
{
    <div id="errorDiv">
        <p> The username "@ViewData["user"]" is already taken. @ViewData["error"] </p>
    </div>
}
</div>
